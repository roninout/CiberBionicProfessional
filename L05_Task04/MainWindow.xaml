                    <ComboBox x:Name="comboStyleFonts1" HorizontalAlignment="Left" Margin="26,187,0,0" VerticalAlignment="Top" Width="179" Grid.ColumnSpan="2" SelectionChanged="comboStyleFonts1_SelectionChanged"/>
                </Grid>
            </TabItem>
        </TabControl>

    </Grid>
</Window>
