                    <xctk:ColorPicker x:Name="ClrPcker_Text2" Margin="354,111,169,202" HorizontalAlignment="Center" VerticalAlignment="Center" Width="179" Height="22" SelectedColorChanged="ClrPcker_Text2_SelectedColorChanged" Grid.Column="1"/>
                    <ComboBox x:Name="comboSyze2" Grid.Column="1" HorizontalAlignment="Left" Margin="549,187,0,0" VerticalAlignment="Top" Width="120" SelectionChanged="comboSyze2_SelectionChanged"/>
                    <ComboBox x:Name="comboStyleFonts2" Grid.Column="1" HorizontalAlignment="Left" Margin="354,187,0,0" VerticalAlignment="Top" Width="179" SelectionChanged="comboStyleFonts2_SelectionChanged"/>
                    <xctk:ColorPicker x:Name="ClrPcker_Back1" Margin="26,41,549,272" HorizontalAlignment="Center" VerticalAlignment="Center" Width="179" Height="22" SelectedColorChanged="ClrPcker_Back1_SelectedColorChanged" Grid.ColumnSpan="2"/>
                    <Button x:Name="Btn_SaveToXml" Content="Save to XML" HorizontalAlignment="Left" Height="41" Margin="26,249,0,0" VerticalAlignment="Top" Width="315" Click="Btn_SaveToXml_Click" Grid.ColumnSpan="2"/>
                    <Label x:Name="Label_Example1" Content="Color empty" HorizontalAlignment="Left" VerticalAlignment="Top" Width="129" Height="26" Margin="169,71,0,0" Grid.Column="1"/>
                    <Label Content="Цвет фона" HorizontalAlignment="Left" Margin="26,10,0,0" VerticalAlignment="Top" Width="179" Grid.ColumnSpan="2"/>
                    <Label Content="Цвет текста" HorizontalAlignment="Left" Margin="26,80,0,0" VerticalAlignment="Top" Width="179" Grid.ColumnSpan="2"/>
